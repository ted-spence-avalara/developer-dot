{
    "src_folders": "_test/browser",
    "output_folder": "_test/browser/_results",
    "custom_commands_path": "",
    "custom_assertions_path": "",
    "page_objects_path": "",
    "globals_path": "",
    "test_settings": {
        "default": {
            "launch_url": "http://localhost",
            "selenium_port": 4444,
            "selenium_host": "localhost",
            "silent": true,
            "screenshots": {
                "enabled": true,
                "on_failure": true,
                "on_error": false,
                "path": "_test/browser/_results/screenshots/FAIL/ff"
            },
            "desiredCapabilities": {
                "browserName": "chrome",
                "javascriptEnabled": true,
                "acceptSslCerts": true
            },
            "exclude": [
                "helpers",
                "exclude"
            ]
        },
        "chrome": {
            "desiredCapabilities": {
                "browserName": "chrome"
            },
            "screenshots": {
                "path": "_test/browser/_results/screenshots/FAIL/chrome"
            },
            "exclude": [
                "exclude",
                "ff"
            ]
        }
    }
}
